{
    "name": "ghenghis/bravian-docker",
    "description": "Enterprise-grade Docker implementation of Travian browser game server",
    "type": "project",
    "keywords": ["travian", "docker", "game-server", "php", "enterprise"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ghenghis",
            "email": "admin@bravian-docker.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-redis": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/",
            "Infrastructure\\": "src/Infrastructure/",
            "Shared\\": "src/Shared/"
        },
        "files": [
            "autoloader.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=9",
        "phpcs": "phpcs src --standard=PSR12",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": "composer phpstan && composer phpcs && composer phpmd",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
