# Docker Travian Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=DockerTravian
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC

# Database Configuration (MariaDB - Free)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=travian
DB_USERNAME=travian
DB_PASSWORD=travian123
DB_ROOT_PASSWORD=root123

# Redis Cache Configuration (Free)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# RabbitMQ Queue Configuration (Free)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/
QUEUE_CONNECTION=rabbitmq

# Mail Configuration (Use local Mailhog for dev - Free)
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@travian.local
MAIL_FROM_NAME="${APP_NAME}"

# Game Settings
GAME_SPEED=1
GAME_WORLD_SIZE=400
GAME_PROTECTION_TIME=72
GAME_START_GOLD=0
GAME_START_RESOURCES=750
GAME_MAX_PLAYERS=5000

# Security Settings
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
CSRF_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring (Free Tools)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Development Tools (Free)
PHPMYADMIN_PORT=8081
MAILHOG_PORT=8025

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=14

# Performance
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_SIZE=100M
PHP_POST_MAX_SIZE=100M
PHP_MAX_INPUT_VARS=10000

# Docker Settings
COMPOSE_PROJECT_NAME=docker-travian
DOCKER_HOST_IP=172.17.0.1
